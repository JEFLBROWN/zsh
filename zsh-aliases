alias nv='nvim'

alias lg='lazygit'
alias nf='neofetch'

alias ..='cd ..'
alias ll='ls -l'
alias la='ls -a'

alias rmf='rm -rf'

alias nz='nvim $(fzf -m --preview="bat --color=always {}")' #open -m (multiple) files of what you search for in neovim. TAB selects the files

alias ls='lsd'
alias nala='sudo nala'
alias gdl='gallery-dl'

alias hm='clear && cd' # go to home directory and clear terminal
alias cla='clear && ls -a'
alias cl='clear && ls'
alias c='clear'
alias apt='sudo apt'

alias update='apt update && apt upgrade && apt autoremove'
alias pour='brew update && brew upgrade'

# alias rmt='\mv -ft $@ ~/.trash/'
alias mroot='sudo -i'

alias q='exit'
alias so='source ~/.config/zsh/.zshrc'

alias bat='batcat' #on debian based systems, the bat command conflicts with some other command so bat installs with the default command batcat.

